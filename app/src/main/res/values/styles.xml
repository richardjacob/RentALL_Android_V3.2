    <style name="BecomeHostText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BecomeHostEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:backgroundTint">#d9d9d9</item>
        <item name="android:colorControlActivated">#d9d9d9</item>
        <item name="android:colorControlHighlight">#d9d9d9</item>
        <item name="android:textCursorDrawable">@drawable/cursor_black</item>
    </style>

    <style name="BecomeHostDescEdit">
        <item name="android:backgroundTint">#d9d9d9</item>
        <item name="android:colorControlActivated">#d9d9d9</item>
        <item name="android:colorControlHighlight">#d9d9d9</item>
        <item name="android:textCursorDrawable">@drawable/cursor_black</item>
    </style>


