<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.rentall.radicalstart.ui.host.step_one.StepOneViewModel.NextScreen"/>
        <variable
            name="viewModel"
            type="com.rentall.radicalstart.ui.host.step_one.StepOneViewModel" />
        <variable
            name="step"
            type="String"/>
        <variable
            name="text"
            type="String"/>
        <variable
            name="textSize"
            type="Boolean" />
        <variable
            name="paddingBottom"
            type="Boolean" />
        <variable
            name="paddingTop"
            type="Boolean" />
        <variable
            name="isBlack"
            type="Boolean" />
        <variable
            name="visibility"
            type="Boolean" />
        <variable
            name="showDivider"
            type="Boolean" />
        <variable
            name="continuePress"
            type="android.view.View.OnClickListener" />
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layoutDirection="locale">

        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@{paddingTop ? @dimen/paddingListing : @dimen/no_padding}"
            android:paddingBottom="@{paddingBottom ? @dimen/paddingListing : @dimen/no_padding}"
            android:textSize="@{textSize ? @dimen/text_size_h3 : @dimen/text_size_h1}"
            android:textColor="@{isBlack? @color/text_color : @color/grey_font}"
            android:text="@{step}"
            android:onClick="@{clickListener}"
            tools:text="Private Place"
            android:textDirection="locale"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9"
            tools:visibility="visible"
            android:visibility="@{showDivider? View.VISIBLE : View.GONE,default=gone}"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@{text}"
            android:padding="10dp"
            tools:text="Private Place"
            android:layout_marginTop="10dp"
            android:visibility="@{visibility? View.VISIBLE : View.GONE}"
            android:background="@drawable/curve_button_green"
            android:onClick="@{continuePress}"
            android:textDirection="locale"
            />

    </LinearLayout>

</layout>
