<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="url"
            type="String" />
        <variable
            name="name"
            type="String" />
        <variable
            name="wishListStatus"
            type="Boolean"/>
        <variable
            name="wishListCount"
            type="Integer"/>
        <variable
            name="progress"
            type="com.rentall.radicalstart.ui.auth.AuthViewModel.LottieProgress"/>
        <variable
            name="isRetry"
            type="String"/>
        <variable
            name="onRetryClick"
            type="android.view.View.OnClickListener"/>

        <variable
            name="heartClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="@{clickListener}"
        android:layoutDirection="locale">

        <RelativeLayout
            android:id="@+id/rl_saved_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_listing_saved_image"
                android:layout_width="258dp"
                android:layout_height="172dp"
                android:layout_marginBottom="10dp"
                imgListing="@{url}"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lt_loading_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                progress="@{progress}"
                isWishList="@{wishListStatus}"
                retryOption = "@{isRetry}"
                android:layout_centerInParent="true"
                android:onClick="@{heartClickListener}" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_autorenew_red_24dp"
                android:layout_centerInParent="true"
                android:onClick="@{onRetryClick}"
                wishListVisible="@{isRetry}"/>

        </RelativeLayout>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{name}"
                android:textSize="16sp"
                android:layout_below="@id/rl_saved_image"
                android:textColor="@color/text_color"
                android:ellipsize="end"
                android:maxEms="5"
                android:singleLine="true"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textDirection="locale"
                />

            <TextView
                android:id="@+id/tv_saved_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ wishListCount != 0 ?  ` ` + wishListCount + @plurals/home_count(wishListCount) : ` ` + @string/nothing_saved_yet }"
                android:textSize="16sp"
                android:layout_below="@id/rl_saved_image"
                android:layout_toEndOf="@id/tv_name"
                android:textColor="@color/text_color"
                android:maxLines="1"
                android:textDirection="locale"
                />

    </RelativeLayout>

</layout>
