<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="paddingBottom"
            type="Boolean" />
        <variable
            name="paddingTop"
            type="Boolean" />
        <variable
            name="large"
            type="Boolean" />
        <variable
            name="text"
            type="String"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="@{paddingTop ? @dimen/paddingListing : @dimen/no_padding}"
        android:paddingBottom="@{paddingBottom ? @dimen/paddingListing : @dimen/no_padding}"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layoutDirection="locale">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textNoSuggestions"
            android:gravity="start"
            android:breakStrategy="simple"
            android:justificationMode="inter_word"
            android:text="@{text}"
            android:onClick="@{clickListener}"
            android:textSize="@{large? @dimen/text_size_h5 : @dimen/text_size_h2}"
            android:textColor="@color/text_color"
            android:textDirection="locale"
            />

    </LinearLayout>

</layout>
