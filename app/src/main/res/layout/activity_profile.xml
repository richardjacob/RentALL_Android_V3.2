<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnknownAttribute -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.rentall.radicalstart.R"/>
        <variable
            name="viewModel"
            type="com.rentall.radicalstart.ui.profile.edit_profile.EditProfileViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <include
                android:id="@+id/action_bar"
                layout="@layout/toolbar_profile"
                style="@style/Toolbar" />

            <ScrollView
                android:id="@+id/scroll_profile"
                style="@style/ScrollView"
                android:scrollbars="none"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/fl_loading_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            tools:ignore="ContentDescription"
                            img="@{viewModel.pic}"/>

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lt_progress_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_scale="0.6"
                            android:layout_gravity="center_vertical|center_horizontal"
                            app:lottie_rawRes="@raw/animation"
                            goneUnless="@{viewModel.isProgressLoading}"/>

                    </FrameLayout>

                    <RelativeLayout
                        style="@style/AuthScreenTopLayout">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/text_size_h3"
                            android:layout_marginTop="5dp"
                            android:textDirection="locale"
                            android:text="@{viewModel.firstName + ' ' + viewModel.lastName}"
                            />

                        <TextView
                            android:id="@+id/tv_edit_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_name"
                            android:text="@string/edit_name"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_h2"
                            android:textColor="@color/colorAccent"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:textDirection="locale"
                            android:focusable="true"
                            android:layout_margin="10dp"
                            android:onClick="@{() -> viewModel.clickEvent(R.layout.include_edit_name)}"
                            />

                        <View
                            android:id="@+id/view_first_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d9d9d9"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_edit_name"/>

                        <TextView
                            android:id="@+id/tv_about_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view_first_divider"
                            android:text="@string/about_me"
                            android:textDirection="locale"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            />

                        <TextView
                            android:id="@+id/tv_about_me_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_about_me"
                            android:textSize="@dimen/text_size_h2"
                            android:maxLines="3"
                            android:textDirection="locale"
                            android:ellipsize="end"
                            android:text="@{viewModel.aboutMe}"
                            />

                        <TextView
                            android:id="@+id/tv_edit_about_me"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_about_me_content"
                            android:text="@string/edit_about_me"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_h2"
                            android:textColor="@color/colorAccent"
                            android:layout_margin="10dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:textDirection="locale"
                            android:focusable="true"
                            android:onClick="@{() -> viewModel.clickEvent(R.layout.include_edit_aboutme)}" />

                        <View
                            android:id="@+id/view_second_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d9d9d9"
                            android:layout_below="@id/tv_edit_about_me"
                            android:layout_marginBottom="0dp"/>

                        <TextView
                            android:id="@+id/tv_private_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view_second_divider"
                            android:text="@string/private_details"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/text_size_h2"
                            android:textDirection="locale"
                            android:layout_marginTop="40dp"/>

                        <View
                            android:id="@+id/div"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d9d9d9"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_below="@id/tv_private_details"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_private_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/div"
                            android:layout_marginTop="-3dp"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="3dp">

                            <LinearLayout
                                android:id="@+id/ll_private_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <RelativeLayout
                                    android:id="@+id/rl_gender"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="12dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toStartOf="@id/iv_gender_arrow"
                                        android:textSize="18sp"
                                        android:textDirection="locale"
                                        android:text="@string/gender"/>

                                    <TextView
                                        android:id="@+id/tv_gender_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:textColor="@color/colorAccent"
                                        android:textDirection="locale"
                                        android:textSize="@dimen/text_size_h2"
                                        android:text="@{viewModel.genderLanguage}"
                                        hideSome="@{viewModel.gender}"/>

                                    <ImageView
                                        android:id="@+id/iv_gender_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_right_arrow_red"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        tools:ignore="ContentDescription"
                                        hideArrow="@{viewModel.gender}"/>

                                </RelativeLayout>

                                <View
                                    android:id="@+id/view_third_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="#d9d9d9" />

                                <RelativeLayout
                                    android:id="@+id/rl_birthday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="12dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toStartOf="@id/tv_dob"
                                        android:textSize="18sp"
                                        android:textDirection="locale"
                                        android:text="@string/birth_date"/>

                                    <TextView
                                        android:id="@+id/tv_dob"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="@dimen/text_size_h2"
                                        android:textDirection="locale"
                                        formatDOB="@{viewModel.dob}"
                                        hideSome="@{viewModel.dob}"/>

                                    <ImageView
                                        android:id="@+id/iv_dob_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_right_arrow_red"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        tools:ignore="ContentDescription"
                                        hideArrow="@{viewModel.dob}"/>

                                </RelativeLayout>

                                <View
                                    android:id="@+id/view_fourth_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="#d9d9d9" />

                                <RelativeLayout
                                    android:id="@+id/rl_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="false"
                                    android:focusable="true"
                                    android:padding="12dp">

                                    <TextView
                                        android:id="@+id/tv_email_placeholder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="18sp"
                                        android:paddingEnd="40dp"
                                        android:textDirection="locale"
                                        android:paddingStart="0dp"
                                        android:text="@string/email"/>

                                    <TextView
                                        android:id="@+id/tv_email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_toEndOf="@id/tv_email_placeholder"
                                        android:gravity="end"
                                        android:textDirection="locale"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="@dimen/text_size_h2"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:text="@{viewModel.email}"
                                        hideSome="@{viewModel.email}"/>

                                    <ImageView
                                        android:id="@+id/iv_email_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_right_arrow_red"
                                        android:layout_centerVertical="true"
                                        tools:ignore="ContentDescription"
                                        android:layout_alignParentEnd="true"
                                        hideArrow="@{viewModel.email}"/>

                                </RelativeLayout>

                                <View
                                    android:id="@+id/view_fifth_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="#d9d9d9" />

                                <RelativeLayout
                                    android:id="@+id/rl_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="12dp"
                                    android:onClick="@{() -> viewModel.clickEvent(R.layout.include_edit_phone)}">

                                    <TextView
                                        android:id="@+id/tv_phone_placeholder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="18sp"
                                        android:textDirection="locale"
                                        android:paddingEnd="40dp"
                                        android:paddingStart="0dp"
                                        android:text="@string/phone"/>

                                    <TextView
                                        android:id="@+id/tv_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_toEndOf="@id/tv_phone_placeholder"
                                        android:gravity="end"
                                        android:textDirection="locale"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="@dimen/text_size_h2"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:text="@{viewModel.phone}"
                                        hideSome="@{viewModel.phone}"/>

                                    <ImageView
                                        android:id="@+id/iv_phone_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_right_arrow_red"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        tools:ignore="ContentDescription"
                                        hideArrow="@{viewModel.phone}"/>

                                </RelativeLayout>

                                <View
                                    android:id="@+id/view_sixth_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="#d9d9d9" />

                                <RelativeLayout
                                    android:id="@+id/rl_languages"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="12dp"
                                    android:visibility="visible">

                                    <TextView
                                        android:id="@+id/tv_languages_placeholder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="18sp"
                                        android:textDirection="locale"
                                        android:paddingEnd="40dp"
                                        android:paddingStart="0dp"
                                        android:text="@string/preferred_language"/>

                                    <TextView
                                        android:id="@+id/tv_languages"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_toEndOf="@id/tv_languages_placeholder"
                                        android:gravity="end"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="@dimen/text_size_h2"
                                        android:singleLine="true"
                                        android:textDirection="locale"
                                        android:ellipsize="end"
                                        android:text="@{viewModel.languages}"
                                        hideSome="@{viewModel.languages}"/>

                                    <ImageView
                                        android:id="@+id/iv_languages_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_right_arrow_red"
                                        android:layout_centerVertical="true"
                                        tools:ignore="ContentDescription"
                                        android:layout_alignParentEnd="true"
                                        hideArrow="@{viewModel.languages}"/>

                                </RelativeLayout>

                                <View
                                    android:id="@+id/view_seventh_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:visibility="visible"
                                    android:background="#d9d9d9" />

                                <RelativeLayout
                                    android:id="@+id/rl_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="12dp"
                                    android:onClick="@{() -> viewModel.clickEvent(R.layout.include_edit_location)}">

                                    <TextView
                                        android:id="@+id/tv_location_placeholder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="18sp"
                                        android:paddingEnd="40dp"
                                        android:paddingStart="0dp"
                                        android:textDirection="locale"
                                        android:text="@string/location"/>

                                    <TextView
                                        android:id="@+id/tv_location"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_toEndOf="@id/tv_location_placeholder"
                                        android:gravity="end"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="@dimen/text_size_h2"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:textDirection="locale"
                                        android:text="@{viewModel.location}"
                                        hideSome="@{viewModel.location}"/>

                                    <ImageView
                                        android:id="@+id/iv_location_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_right_arrow_red"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        tools:ignore="ContentDescription"
                                        hideArrow="@{viewModel.location}"/>

                                </RelativeLayout>

                                <View
                                    android:id="@+id/view_eight_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:visibility="visible"
                                    android:background="#d9d9d9" />

                                <RelativeLayout
                                    android:id="@+id/rl_currency"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="12dp">

                                    <TextView
                                        android:id="@+id/tv_currency_placeholder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="18sp"
                                        android:paddingEnd="40dp"
                                        android:paddingStart="0dp"
                                        android:textDirection="locale"
                                        android:text="@string/preferred_currency"/>

                                    <TextView
                                        android:id="@+id/tv_currency"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_toEndOf="@id/tv_currency_placeholder"
                                        android:gravity="end"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="@dimen/text_size_h2"
                                        android:singleLine="true"
                                        android:textDirection="locale"
                                        android:ellipsize="end"
                                        android:text="@{viewModel.currency}"
                                        hideSome="@{viewModel.currency}"/>

                                    <ImageView
                                        android:id="@+id/iv_currency_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_right_arrow_red"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        tools:ignore="ContentDescription"
                                        hideArrow="@{viewModel.currency}"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_verified_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/card_private_details"
                            android:text="@string/verified_info"
                            android:layout_centerHorizontal="true"
                            android:textDirection="locale"
                            android:textSize="@dimen/text_size_h2"
                            android:layout_marginTop="40dp"/>

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#d9d9d9"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_below="@id/tv_verified_info"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_verified_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/divider"
                            android:layout_marginTop="-3dp"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="3dp">

                        <LinearLayout
                            android:id="@+id/ll_verified_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <RelativeLayout
                                android:id="@+id/rl_email_verified"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp">

                                <TextView
                                    android:id="@+id/tv_email_confirm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_h2"
                                    android:layout_toStartOf="@id/iv_email_verified"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:textDirection="locale"
                                    />

                                <ImageView
                                    android:id="@+id/iv_email_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:src="@drawable/ic_right_arrow_red"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/view_email_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:visibility="visible"
                                android:background="#d9d9d9" />

                            <RelativeLayout
                                android:id="@+id/rl_fb_verified"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp">

                                <TextView
                                    android:id="@+id/tv_fb_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_h2"
                                    android:layout_toStartOf="@id/iv_fb_verified"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:textDirection="locale"
                                    />

                                <ImageView
                                    android:id="@+id/iv_fb_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:src="@drawable/ic_right_arrow_red"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/view_fb_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:visibility="visible"
                                android:background="#d9d9d9" />

                            <RelativeLayout
                                android:id="@+id/rl_google_verififed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp">

                                <TextView
                                    android:id="@+id/tv_google_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_h2"
                                    android:layout_toStartOf="@id/iv_google_verified"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:textDirection="locale"
                                    />

                                <ImageView
                                    android:id="@+id/iv_google_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:src="@drawable/ic_right_arrow_red"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/view_google_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:visibility="visible"
                                android:background="#d9d9d9" />

                            <RelativeLayout
                                android:id="@+id/rl_ph_verified"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp">

                                <TextView
                                    android:id="@+id/tv_ph_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_h2"
                                    android:layout_toStartOf="@id/iv_phone_verified"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:textDirection="locale"
                                    />

                                <ImageView
                                    android:id="@+id/iv_phone_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:src="@drawable/ic_right_arrow_red"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                        </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_profile_logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:layout_below="@id/card_private_details"
                            android:gravity="center"
                            android:padding="15dp"
                            android:layout_marginTop="25dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:background="@drawable/curve_stroke_blue"
                            android:visibility="gone"
                            android:textDirection="locale"/>

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_auth_loading_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            goneUnless="@{viewModel.isLoading}">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lt_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_scale="0.4"
                android:layout_gravity="center_vertical|center_horizontal"
                app:lottie_rawRes="@raw/loading_qwe"
                android:background="@drawable/lottie_background"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fl_profile">
        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
